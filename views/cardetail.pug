extends layout
block content
  h1(class='page-title')= title
  if (toShow == null)
    h2 No instance to View
  else
    - let carid = toShow._id
    - let model = toShow.model
    - let year = toShow.year
    - let price = toShow.price
    div.container
      div.car-details
        div.row
          span(class='carAttribute') Car ID:   
          span(class='carValue') #{carid}

        div.row
          span(class='carAttribute') Car Model:
          span(class='carValue') #{model}

        div.row
          span(class='carAttribute') Car Year:
          span(class='carValue') #{year}

        div.row
          span(class='carAttribute') Car Price:
          span(class='carValue') #{price}